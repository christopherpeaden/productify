<h1>Categories</h1>

<% @categories.each do |category| %>
  <ul>
    <li>
      <%= link_to category.title, category %>
      <%= link_to "Edit", edit_category_path(category) %>
      <%= link_to "Delete", category, method: :delete, data: { confirm: "Delete this category?" } %>
    </li>
  </ul>
<% end %>

<%= link_to "New Category", new_category_path %>

<h2>Priority</h2>

<div id="priorities">
  <% Item.all.each do |item| %>
    <p><%= item.content if item.priority == true %></p>
  <% end %>
</div>
